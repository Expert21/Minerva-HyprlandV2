{
    "colorscheme": "obsidian-tyrian",
    "autosu": true,
    "mkparents": true,
    "savecursor": true,
    "saveundo": true,
    "scrollbar": true,
    "scrollmargin": 5,
    "tabsize": 4,
    "tabstospaces": true,
    "softwrap": true,
    "wordwrap": true,
    "cursorline": true,
    "ruler": true,
    "relativeruler": false,
    "statusformatl": "$(filename) $(modified)($(line),$(col)) | $(status.paste)| $(status.recording)| ft:$(opt:filetype) | $(opt:fileformat)",
    "statusformatr": "$(bind:command) | $(bind:quit)",
    "mouse": true,
    "clipboard": "external",
    "diffgutter": true,
    "hlsearch": true,
    "incsearch": true,
    "ignorecase": true,
    "smartcase": true,
    "syntax": true,
    "autosave": 0,
    "autoclose": true,
    "linter": true,
    "rmtrailingws": true
}